<Controls:DialogBase x:Class="CoApp.Mg.PackageManager.Views.AboutView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:Controls="clr-namespace:CoApp.Mg.Toolkit.Controls;assembly=CoApp.Mg.Toolkit"
                     Width="300" Height="150"
                     ResizeMode="NoResize"
                     WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="6">
            <Label Content="CoApp.Mg" FontSize="14" FontWeight="Bold" />
            <Label Content="Written by Henrik Juvonen [henjuv@utu.fi]" />
        </StackPanel>
        <Button Grid.Row="1" Content="Close" Height="23" Width="70" Margin="6,0,6,6" Name="ClickClose" IsDefault="True" HorizontalAlignment="Right"/>
    </Grid>
</Controls:DialogBase>
